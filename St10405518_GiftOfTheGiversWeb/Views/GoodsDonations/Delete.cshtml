@model St10405518_GiftOfTheGiversWeb.Models.GoodsDonation

<div class="container my-5">
    <div class="text-center mb-4">
        <h1 class="display-4 text-danger">Delete Goods Donation</h1>
        <p class="text-muted">Are you sure you want to remove this donation record?</p>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Username</dt>
                <dd class="col-sm-9">@Model.USERNAME</dd>
                <dt class="col-sm-3">Date</dt>
                <dd class="col-sm-9">@Model.DATE?.ToShortDateString()</dd>
                <dt class="col-sm-3">Item Count</dt>
                <dd class="col-sm-9">@Model.ITEM_COUNT</dd>
                <dt class="col-sm-3">Category</dt>
                <dd class="col-sm-9">@Model.CATEGORY</dd>
                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.DESCRIPTION</dd>
                <dt class="col-sm-3">Donor</dt>
                <dd class="col-sm-9">@Model.DONOR</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="GOODS_DONATION_ID" />
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger btn-lg">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
