@model St10405518_GiftOfTheGiversWeb.Models.GoodsDonation
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Create Goods Donation";
}

<div class="container my-5">
    <div class="text-center mb-4">
        <h1 class="display-4">Donate Goods</h1>
        <p class="text-muted">Fill in the details to make a goods donation.</p>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create" method="post">
                <input type="hidden" asp-for="USERNAME" value="@UserManager.GetUserName(User)" />

                <div class="mb-3">
                    <label asp-for="DATE" class="form-label">Date</label>
                    <input asp-for="DATE" class="form-control" type="date" />
                    <span asp-validation-for="DATE" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ITEM_COUNT" class="form-label">Item Count</label>
                    <input asp-for="ITEM_COUNT" class="form-control" type="number" min="1" />
                    <span asp-validation-for="ITEM_COUNT" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CATEGORY" class="form-label">Category</label>
                    <select asp-for="CATEGORY" id="CATEGORY" class="form-select">
                        <option value="" disabled selected>Select a category</option>
                        <option value="Cloths">Cloths</option>
                        <option value="Non-Perishable Foods">Non-Perishable Foods</option>
                        @if (ViewBag.CategoryList != null)
                        {
                            foreach (var category in ViewBag.CategoryList as List<string>)
                            {
                                <option value="@category">@category</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="CATEGORY" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <button type="button" id="addCategoryButton" class="btn btn-primary">Add New Category</button>
                </div>

                <div id="newCategoryForm" style="display:none;">
                    <div class="mb-3">
                        <input type="text" id="newCategoryName" class="form-control" placeholder="Enter new category" />
                    </div>
                    <div class="mb-3 d-flex gap-2">
                        <button type="button" id="createCategoryButton" class="btn btn-success">Create</button>
                        <button type="button" id="cancelCategoryButton" class="btn btn-secondary">Cancel</button>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="DESCRIPTION" class="form-label">Description</label>
                    <input asp-for="DESCRIPTION" class="form-control" />
                    <span asp-validation-for="DESCRIPTION" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Donor</label><br />
                    <input type="radio" name="DONOR" value="Anonymous" /> Anonymous
                    <span asp-validation-for="DONOR" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">Donate</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            var categoryDropdown = $("#CATEGORY");
            var addBtn = $("#addCategoryButton");
            var newForm = $("#newCategoryForm");
            var newName = $("#newCategoryName");

            addBtn.click(function () {
                addBtn.prop("disabled", true);
                categoryDropdown.prop("disabled", true);
                newForm.show();
            });

            $("#cancelCategoryButton").click(function () {
                addBtn.prop("disabled", false);
                categoryDropdown.prop("disabled", false);
                newForm.hide();
                newName.val("");
            });

            $("#createCategoryButton").click(function () {
                var value = newName.val();
                if (value) {
                    categoryDropdown.append(new Option(value, value, true, true));
                    addBtn.prop("disabled", false);
                    categoryDropdown.prop("disabled", false);
                    newForm.hide();
                    newName.val("");
                }
            });
        });
    </script>
}
