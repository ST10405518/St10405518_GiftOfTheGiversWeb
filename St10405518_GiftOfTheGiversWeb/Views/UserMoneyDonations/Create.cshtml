@model St10405518_GiftOfTheGiversWeb.Models.MoneyDonation

@{
    ViewData["Title"] = "Donate Money";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-3">Donate Money</h2>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input asp-for="USERNAME" type="hidden" value="@User.Identity.Name" />

                <div class="mb-3">
                    <label asp-for="DATE" class="form-label"></label>
                    <input asp-for="DATE" class="form-control" type="date" />
                    <span asp-validation-for="DATE" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AMOUNT" class="form-label"></label>
                    <input asp-for="AMOUNT" class="form-control" type="number" step="0.01" min="1" />
                    <span asp-validation-for="AMOUNT" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DONOR" class="form-label">Donor</label><br>
                    <input type="radio" asp-for="DONOR" name="DONOR" value="Anonymous" /> Anonymous
                    <input type="radio" asp-for="DONOR" name="DONOR" value="@User.Identity.Name" checked /> Myself
                    <span asp-validation-for="DONOR" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Donate</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
