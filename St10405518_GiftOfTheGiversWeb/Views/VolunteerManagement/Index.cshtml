@model IEnumerable<St10405518_GiftOfTheGiversWeb.Models.Volunteer>

@{
    ViewData["Title"] = "Volunteer List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2>Volunteer List</h2>
    <p>
        <a asp-action="Create" class="btn btn-success">Register New Volunteer</a>
    </p>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Registration Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var volunteer in Model)
            {
                <tr>
                    <td>@volunteer.Name</td>
                    <td>@volunteer.Email</td>
                    <td>@volunteer.PhoneNumber</td>
                    <td>@volunteer.RegistrationDate.ToShortDateString()</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@volunteer.VolunteerID" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="Details" asp-route-id="@volunteer.VolunteerID" class="btn btn-sm btn-info ms-1">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
