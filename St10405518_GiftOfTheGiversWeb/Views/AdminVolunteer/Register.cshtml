@model Volunteer
@{
    ViewData["Title"] = "Become a Volunteer";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">Join Our Volunteer Team</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Register" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Name" class="form-label">Full Name *</label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Email" class="form-label">Email *</label>
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="PhoneNumber" class="form-label">Phone Number *</label>
                                    <input asp-for="PhoneNumber" class="form-control" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="EmergencyContact" class="form-label">Emergency Contact</label>
                                    <input asp-for="EmergencyContact" class="form-control" />
                                    <span asp-validation-for="EmergencyContact" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Address" class="form-label">Address *</label>
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Skills" class="form-label">Skills & Qualifications *</label>
                            <textarea asp-for="Skills" class="form-control" rows="3" placeholder="e.g., First Aid, Cooking, Driving, Medical Training, Construction"></textarea>
                            <span asp-validation-for="Skills" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Availability" class="form-label">Availability</label>
                            <input asp-for="Availability" class="form-control" placeholder="e.g., Weekends, Evenings, Full-time" />
                            <span asp-validation-for="Availability" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">Register as Volunteer</button>
                            <a href="/" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>