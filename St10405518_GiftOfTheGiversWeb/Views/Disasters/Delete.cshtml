@model St10405518_GiftOfTheGiversWeb.Models.Disaster

@{
    ViewData["Title"] = "Delete Disaster";
}

<div class="container my-5">
    <div class="text-center mb-4">
        <h1 class="display-4 text-danger">Delete Disaster</h1>
        <p class="text-muted">Are you sure you want to remove this disaster record?</p>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Username</dt>
                <dd class="col-sm-9">@Model.USERNAME</dd>

                <dt class="col-sm-3">Start Date</dt>
                <dd class="col-sm-9">@Model.STARTDATE?.ToShortDateString()</dd>

                <dt class="col-sm-3">End Date</dt>
                <dd class="col-sm-9">@Model.ENDDATE?.ToShortDateString()</dd>

                <dt class="col-sm-3">Location</dt>
                <dd class="col-sm-9">@Model.LOCATION</dd>

                <dt class="col-sm-3">Aid Type</dt>
                <dd class="col-sm-9">@Model.AID_TYPE</dd>

                <dt class="col-sm-3">Active</dt>
                <dd class="col-sm-9">@(Model.IsActive != 0 ? "Yes" : "No")</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="DISTATER_ID" />
                <div class="d-flex justify-content-between">
                    <input type="submit" value="Delete" class="btn btn-danger btn-lg" />
                    <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
