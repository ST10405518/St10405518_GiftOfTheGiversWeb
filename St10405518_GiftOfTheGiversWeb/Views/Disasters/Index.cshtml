@model IEnumerable<St10405518_GiftOfTheGiversWeb.Models.Disaster>
<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5 text-primary">Disasters</h1>
        <a asp-action="Create" class="btn btn-primary btn-lg">Log New Disaster</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Username</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Location</th>
                    <th>Aid Type</th>
                    <th>Active</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.USERNAME</td>
                        <td>@item.STARTDATE?.ToShortDateString()</td>
                        <td>@item.ENDDATE?.ToShortDateString()</td>
                        <td>@item.LOCATION</td>
                        <td>@item.AID_TYPE</td>
                        <td>@(item.IsActive != 0 ? "Yes" : "No")</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.DISTATER_ID" class="btn btn-info btn-sm me-1">Details</a>
                            <a asp-action="Edit" asp-route-id="@item.DISTATER_ID" class="btn btn-success btn-sm me-1">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.DISTATER_ID" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
