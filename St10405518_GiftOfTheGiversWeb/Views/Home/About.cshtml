<!-- JavaScript for Interactions -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Initialize animations
        initAnimations();

        // Pop-up functionality
        initPopups();

        // Auto-show random popup after delay
        setTimeout(showRandomPopup, 3000);
    });

    function initAnimations() {
        // Add visible class to fade-in elements
        const fadeElements = document.querySelectorAll('.fade-in-up');
        fadeElements.forEach(el => {
            el.classList.add('visible');
        });

        // Add scroll animations
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                    observer.unobserve(entry.target);
                }
            });
        }, observerOptions);

        // Observe all animated elements
        document.querySelectorAll('.card-3d').forEach(el => {
            observer.observe(el);
        });
    }

    function initPopups() {
        const cards = document.querySelectorAll('.enhanced-card');
        const popups = document.querySelectorAll('.popup-card');
        const closeButtons = document.querySelectorAll('.popup-close');

        // Show pop-up when card is clicked
        cards.forEach(card => {
            card.addEventListener('click', function() {
                const popupId = this.getAttribute('data-popup');
                const popup = document.getElementById(popupId);

                if (popup) {
                    // Close any open popups first
                    popups.forEach(p => p.classList.remove('show'));

                    // Position pop-up near the clicked card
                    const rect = this.getBoundingClientRect();
                    popup.style.top = `${rect.top + window.scrollY}px`;
                    popup.style.left = `${rect.left + window.scrollX + this.offsetWidth + 20}px`;

                    // Show the pop-up
                    setTimeout(() => {
                        popup.classList.add('show');
                    }, 100);
                }
            });
        });

        // Close pop-up when close button is clicked
        closeButtons.forEach(button => {
            button.addEventListener('click', function() {
                this.closest('.popup-card').classList.remove('show');
            });
        });

        // Close pop-up when clicking outside
        document.addEventListener('click', function(e) {
            if (!e.target.closest('.popup-card') && !e.target.closest('.enhanced-card')) {
                popups.forEach(popup => {
                    popup.classList.remove('show');
                });
            }
        });
    }

    function showRandomPopup() {
        const popups = document.querySelectorAll('.popup-card');
        const randomPopup = popups[Math.floor(Math.random() * popups.length)];

        if (randomPopup) {
            // Close any open popups first
            document.querySelectorAll('.popup-card').forEach(p => p.classList.remove('show'));

            // Position in center
            randomPopup.style.top = '50%';
            randomPopup.style.left = '50%';
            randomPopup.style.transform = 'translate(-50%, -50%)';

            // Show the pop-up
            setTimeout(() => {
                randomPopup.classList.add('show');
            }, 100);

            // Auto-close after 5 seconds
            setTimeout(() => {
                randomPopup.classList.remove('show');
            }, 5000);
        }
    }
</script>