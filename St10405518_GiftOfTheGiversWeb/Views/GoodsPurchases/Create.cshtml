@model St10405518_GiftOfTheGiversWeb.Models.GoodsPurchase

@{
    ViewData["Title"] = "Create Goods Purchase";
}

<div class="container my-5">
    <h1 class="display-5 mb-3">Create Goods Purchase</h1>
    <p>Available Money: <strong>@ViewBag.AvailableMoney</strong></p>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="CATEGORY" class="form-label">Category</label>
                    <select asp-for="CATEGORY" asp-items="ViewBag.Categories" class="form-select" id="CATEGORY">
                        <option value="">-- Select Category --</option>
                    </select>
                    <span asp-validation-for="CATEGORY" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ITEM_COUNT" class="form-label">Item Count</label>
                    <input asp-for="ITEM_COUNT" class="form-control" type="number" min="1" />
                    <span asp-validation-for="ITEM_COUNT" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="GoodsPurchasePrice" class="form-label">Item Price</label>
                    <input asp-for="GoodsPurchasePrice" class="form-control" type="number" step="0.01" min="0" />
                    <span asp-validation-for="GoodsPurchasePrice" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <button type="button" id="addCategoryButton" class="btn btn-primary">Add New Category</button>
                </div>

                <div id="newCategoryForm" style="display:none;">
                    <div class="mb-3">
                        <input type="text" id="newCategoryName" class="form-control" placeholder="Enter new category" />
                    </div>
                    <div class="mb-3 d-flex gap-2">
                        <button type="button" id="createCategoryButton" class="btn btn-success">Create</button>
                        <button type="button" id="cancelCategoryButton" class="btn btn-secondary">Cancel</button>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary w-100">Create Purchase</button>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            var categoryDropdown = $("#CATEGORY");
            var addBtn = $("#addCategoryButton");
            var newForm = $("#newCategoryForm");
            var newName = $("#newCategoryName");

            addBtn.click(function () {
                addBtn.prop("disabled", true);
                categoryDropdown.prop("disabled", true);
                newForm.show();
            });

            $("#cancelCategoryButton").click(function () {
                addBtn.prop("disabled", false);
                categoryDropdown.prop("disabled", false);
                newForm.hide();
                newName.val("");
            });

            $("#createCategoryButton").click(function () {
                var value = newName.val();
                if (value) {
                    categoryDropdown.append(new Option(value, value, true, true));
                    addBtn.prop("disabled", false);
                    categoryDropdown.prop("disabled", false);
                    newForm.hide();
                    newName.val("");
                }
            });
        });
    </script>
}
