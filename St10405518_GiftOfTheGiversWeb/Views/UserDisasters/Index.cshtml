@model IEnumerable<St10405518_GiftOfTheGiversWeb.Models.Disaster>
@{
    ViewData["Title"] = "Disasters";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2>Disaster Reports</h2>
    <hr />
    <p>
        <a asp-action="Create" class="btn btn-primary">Report New Disaster</a>
    </p>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Location</th>
                <th>Aid Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.STARTDATE?.ToShortDateString()</td>
                    <td>@item.ENDDATE?.ToShortDateString()</td>
                    <td>@item.LOCATION</td>
                    <td>@item.AID_TYPE</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.DISTATER_ID" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.DISTATER_ID" class="btn btn-sm btn-info ms-1">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.DISTATER_ID" class="btn btn-sm btn-danger ms-1">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
