@model St10405518_GiftOfTheGiversWeb.Models.MoneyDonation

<div class="container my-5">
    <h3 class="text-danger">Are you sure you want to delete this donation?</h3>

    <div class="card shadow-sm p-3 mb-3">
        <dl class="row">
            <dt class="col-sm-2">Username</dt>
            <dd class="col-sm-10">@Html.DisplayFor(m => m.USERNAME)</dd>

            <dt class="col-sm-2">Date</dt>
            <dd class="col-sm-10">@Html.DisplayFor(m => m.DATE)</dd>

            <dt class="col-sm-2">Amount</dt>
            <dd class="col-sm-10">@Html.DisplayFor(m => m.AMOUNT)</dd>

            <dt class="col-sm-2">Donor</dt>
            <dd class="col-sm-10">@Html.DisplayFor(m => m.DONOR)</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="MONEY_DONATION_ID" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
