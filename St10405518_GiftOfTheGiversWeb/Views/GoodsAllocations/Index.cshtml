@model IEnumerable<St10405518_GiftOfTheGiversWeb.Models.GoodsAllocation>

@{
    ViewData["Title"] = "Goods Allocations";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5">Goods Allocations</h1>
        <a asp-action="Create" class="btn btn-success btn-lg">Create New Allocation</a>
    </div>

    <table class="table table-striped table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Item Count</th>
                <th>Category</th>
                <th>Allocation Date</th>
                <th>Aid Type</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ITEM_COUNT</td>
                    <td>@item.CATEGORY</td>
                    <td>@item.AllocationDate?.ToShortDateString()</td>
                    <td>@item.AidType</td>
                </tr>
            }
        </tbody>
    </table>
</div>
